@using fourtynine.Navbar
@inject INavbarActionsService NavbarActionsService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fourtynine</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700" rel="stylesheet" />
    
    <environment include="Development">
      <script type="module" src="/@@vite/client"></script>
      <script type="module" src="/src/main.ts"></script>
    </environment>
  
    <environment exclude="Development">
      <ImportFile path="src/main.ts"></ImportFile>
      <ImportFile path="src/main.css"></ImportFile>
    </environment>
</head>

@* https://github.com/tailwindtoolbox/Landing-Page/blob/master/index.html *@
<body 
  class="
    leading-normal 
    tracking-normal
    text-white
    brand-gradient-background
    font-sourceSansPro
  "
>
  <nav
    id="header"
    class="
      fixed
      w-full
      z-30
      top-0
      text-white
    "
  >
    <div
      class="
        container
        flex
        flex-wrap
        items-center
        justify-between
        w-full
        mx-auto
        mt-0 py-2
      "
    >
      <div
        class="
          pl-4
          flex
          items-center
        "
      >
        <a
          class="
            toggleColour
            text-white
            no-underline
            hover:no-underline
            font-bold
            text-2xl
            lg:text-4xl
          "
          href="@(NavbarActionsService.HomeAction.Path)"
        >
          49
        </a>
      </div>
      <div
        class="
          block
          lg:hidden
          pr-4
        "
      >
        <button
          id="nav-toggle"
          class="
            flex
            items-center
            p-1
            text-pink-800
            hover:text-gray-900
            focus:outline-none
            focus:shadow-outline
            transform transition hover:scale-105 duration-300 ease-in-out
          "
        >
          <svg
            class="
              fill-current
              h-6 w-6
            "
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
          </svg>
        </button>
      </div>
      <div
        id="nav-content"
        class="
          w-full
          flex-grow
          lg:flex
          lg:items-center
          lg:w-auto
          hidden
          mt-2 lg:mt-0
          bg-white
          lg:bg-transparent
          text-black
          p-4 lg:p-0 z-20
        "
      >
        <ul
          class="
            list-reset
            lg:flex
            justify-end
            flex-1
            items-center
          "
        >
          @{
            var navbarActions = NavbarActionsService.NavbarActions;
            var currentRouteInfo = ViewContext.GetCurrentRouteInfo();
            var activeClasses = @"font-bold";
            var inactiveClasses = @"
              hover:text-gray-800
              hover:text-underline
            ";
            
            foreach (var navbarAction in navbarActions)
            {
              bool isActive = navbarAction.IsMatch(currentRouteInfo);
              <li class="mr-3">
                <a
                  class="
                    @(isActive ? activeClasses : inactiveClasses)
                    inline-block
                    text-black
                    no-underline
                    py-2 px-4
                  "
                  href="@(navbarAction.Path)"
                >
                  @(navbarAction.DisplayName)
                </a>
              </li>
            }
          }
        </ul>
        <button
          id="navAction"
          class="
            mx-auto
            lg:mx-0
            hover:underline
            bg-white
            text-gray-800
            font-bold
            rounded-full
            mt-4
            lg:mt-0
            py-4 px-8
            shadow
            opacity-75
            focus:outline-none
            focus:shadow-outline
            transform transition hover:scale-105 duration-300 ease-in-out
          "
        >
          Action
        </button>
      </div>
    </div>
    <hr class="border-b border-gray-100 opacity-25 my-0 py-0" />
  </nav>

	<!--Container-->
  <div 
    class="
      container
      shadow-lg
      mx-auto
      bg-white
      flex justify-center
      w-full
      mt-24
      md:mt-18
      min-h-screen
    "
  >
		@RenderBody()
	</div>

  @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
