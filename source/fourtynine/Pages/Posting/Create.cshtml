@page
@model fourtynine.Postings.CreatePostingPageModel
@{
    ViewData["Title"] = "Create Posting";
}

@* https://tailwind-elements.com/docs/standard/forms/form-templates/ *@
<div 
  class="
    block
    p-6
    rounded-lg
    shadow-lg
    bg-white
    max-w-sm
    w-full
  "
>
  <form 
    autocomplete="on"
    name="postingForm"
    method="post"
  >
    <div class="form-group mb-6">
      <label
        for="Title" 
        class="form-label"
      >Title</label>

      <input
        name="Title"
        type="text" 
        id="Title"
        class="form-input-field"
        placeholder="Enter title"
      >
    </div>
    <div class="mb-6">
      <input
        type="checkbox"
        class="
          appearance-none
          h-4 w-4
          border
          border-gray-300
          rounded-sm
          bg-white
          checked:bg-blue-600
          checked:border-blue-600
          focus:outline-none
        
          transition
          duration-200
          mt-1
          align-top
          bg-no-repeat
          bg-center
          bg-contain
          float-left
          mr-2
          cursor-pointer
        "
        id="exampleCheck1">
      <label
        class="
          form-check-label
          inline-block
          text-gray-800
        "
        for="exampleCheck1"
      >Check me out</label>
    </div>
    <button
      type="submit" 
      class="
        px-6
        py-2.5
        bg-blue-600
        text-white
        font-medium
        text-xs
        leading-tight
        uppercase
        rounded
        shadow-md
        hover:bg-blue-700 hover:shadow-lg
        focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
        active:bg-blue-800 active:shadow-lg
        transition
        duration-150
        ease-in-out
      "
    >
      Submit
    </button>
  </form>
</div>

<ImportFile path="src/postingForm.ts"></ImportFile>